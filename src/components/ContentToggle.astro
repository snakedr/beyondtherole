<button id="reality-toggle">
    <span id="toggle-text">Показать 'Think'</span>
</button>

<script>
    document.addEventListener('astro:page-load', () => {
        const toggleButton = document.getElementById('reality-toggle');
        const toggleText = document.getElementById('toggle-text');
        // No longer need contentWrapper

        if (!toggleButton || !toggleText) {
            console.error('Content toggle elements not found.');
            return;
        }

        function updateButton(isThinkShown) {
            if (isThinkShown) {
                document.body.classList.add('is-think');
                toggleText.textContent = "Скрыть 'Think'";
            } else {
                document.body.classList.remove('is-think');
                toggleText.textContent = "Показать 'Think'";
            }
        }

        // Default to showing Lite content
        updateButton(false);

        toggleButton.addEventListener('click', () => {
            const isCurrentlyThink = document.body.classList.contains('is-think');
            updateButton(!isCurrentlyThink);
        });
    });
</script>