<script>
  const toggle = document.querySelector('#content-toggle-checkbox'); // ID вашего чекбокса в компоненте ContentToggle
  const thinkLayers = document.querySelectorAll('.think-layer');
  const liteLayers = document.querySelectorAll('.lite-content');

  if (toggle) {
    toggle.addEventListener('change', (e) => {
      const isThinkMode = e.target.checked;

      thinkLayers.forEach(layer => {
        if (isThinkMode) {
          layer.classList.remove('hidden');
        } else {
          layer.classList.add('hidden');
        }
      });

      // Опционально: можно менять стиль или прозрачность lite-контента в режиме Think
      liteLayers.forEach(layer => {
        layer.style.opacity = isThinkMode ? '0.7' : '1';
      });
    });
  }
</script>