---
import ArticleLayout from '../layouts/ArticleLayout.astro';
import DualBlock from '../components/DualBlock.astro';

const title = "Когда работа не заканчивается дома: о профдеформации";
const description = "Глубокий разбор профессиональной деформации и её влияния на близких. Узнайте, как рабочие привычки влияют на семью и что с этим делать.";
const ogImage = "/assets/og-image.png";
const test_block = {
    "id": "neuro_base",
    "lite": "Ваш мозг привыкает к работе, как к колее на дороге. Трудно свернуть домой.",
    "think": "Феномен нейронной инерции обусловлен остаточной активацией синаптических путей. Согласно закону Хебба, повторение ролевых паттернов ведет к долгосрочной потенциации (LTP) в дорсолатеральной префронтальной коре, что затрудняет когнитивное переключение (Task-Switching Cost)."
};
---

<ArticleLayout title={title} description={description} ogImage={ogImage}>
  <main class="max-w-3xl mx-auto my-12 px-6">
    <DualBlock id={test_block.id}>
      <div slot="lite-content">
        <h2>Нейронная инерция</h2>
        <p>{test_block.lite}</p>
      </div>
      <div slot="think-content">
        <h2 class="accent-think">Генезис когнитивного захвата</h2>
        <p>{test_block.think}</p>
      </div>
    </DualBlock>
  </main>
</ArticleLayout>